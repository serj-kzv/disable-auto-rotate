{
  "manifest_version": 2,
  "name": "disable-auto-rotate",
  "description": "Disable a page auto rotation.",
  "short_name": "disable-auto-rotate",
  "author": "serj-kzv",
  "version": "1.0",
  "homepage_url": "https://github.com/serj-kzv/disable-auto-rotate",
  "background": {
    "persistent": true,
    "page": "/background/main.html"
  },
  "content_scripts": [
    {
      "js": [
        "/content/main.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "<all_urls>",
    "activeTab",
    "alarms",
    "bookmarks",
    "browserSettings",
    "browsingData",
    "captivePortal",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "contextualIdentities",
    "cookies",
    "dns",
    "downloads",
    "downloads.open",
    "find",
    "geolocation",
    "history",
    "identity",
    "idle",
    "management",
    "menus",
    "nativeMessaging",
    "notifications",
    "pkcs11",
    "privacy",
    "proxy",
    "search",
    "sessions",
    "storage",
    "tabHide",
    "tabs",
    "theme",
    "topSites",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
